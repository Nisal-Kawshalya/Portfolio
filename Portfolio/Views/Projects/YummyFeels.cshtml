@{
    ViewData["Title"] = "YummyFeels";
}

<section class="project-hero animate">
    <div class="container">

        <a href="/#projects" class="btn btn-outline-dark mb-4">← Back to Projects</a>

        <!-- PROJECT IMAGE -->
        <div class="project-image-wrapper">
            <img src="/images/projects/YummyFeels/1.png" alt="YummyFeels Project">
        </div>

        <!-- PROJECT CONTENT -->
        <div class="project-content mt-5">
            <h1 class="project-title">YummyFeels</h1>
            <p class="project-subtitle">Food Ordering System</p>

            <p class="project-description">
                YummyFeels is a food ordering web application designed to simplify
                online food ordering and restaurant management. The system allows
                customers to browse menus, place orders, and manage food deliveries
                efficiently.
            </p>

            <h5 class="mt-4">Technologies Used</h5>
            <ul class="project-tech">
                <li>ASP.NET Core MVC</li>
                <li>C#</li>
                <li>SQL Server</li>
                <li>Bootstrap</li>
            </ul>
        </div>

        <!-- IMAGE SLIDER -->
        <div id="yummyCarousel" class="carousel slide mt-5">
            <div class="carousel-inner">

                <div class="carousel-item active">
                    <img src="/images/projects/YummyFeels/1.png" class="d-block w-100">
                </div>

                <div class="carousel-item">
                    <img src="/images/projects/YummyFeels/2.png" class="d-block w-100">
                </div>

                <div class="carousel-item">
                    <img src="/images/projects/YummyFeels/3.png" class="d-block w-100">
                </div>

            </div>

            <button class="carousel-control-prev" type="button"
                    data-bs-target="#yummyCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>

            <button class="carousel-control-next" type="button"
                    data-bs-target="#yummyCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>

    </div>
</section>
