@{
    ViewData["Title"] = "QuickQuiz";
}

<section class="project-hero animate">
    <div class="container">

        <!-- BACK BUTTON -->
        <div class="project-back-btn">
            <a href="/#projects" class="btn btn-outline-dark">
                ← Back to Projects
            </a>
        </div>

        <!-- PROJECT IMAGE -->
        <div class="project-image-wrapper">
            <img src="/images/projects/QuickQuiz/img1.png" alt="QuickQuiz Project">
        </div>

        <!-- PROJECT CONTENT -->
        <div class="project-content mt-5">

            <h1 class="project-title">QuickQuiz</h1>
            <p class="project-subtitle">JavaFX Quiz Application</p>

            <p class="project-description">
                QuickQuiz is a modern, feature-rich quiz application developed using
                <strong>Java 17</strong> and <strong>JavaFX 17</strong>. The system provides
                secure authentication, quiz creation, and an interactive quiz-taking
                experience for both students and teachers.
            </p>

            <!-- FEATURES -->
            <h5 class="mt-4">Key Features</h5>
            <ul class="project-tech">
                <li>User authentication with role-based access (Student / Teacher)</li>
                <li>Quiz creation with multiple question types</li>
                <li>Interactive quiz interface with timer</li>
                <li>Progress tracking with navigation controls</li>
                <li>Detailed quiz results and performance feedback</li>
            </ul>

            <!-- TECHNOLOGIES -->
            <h5 class="mt-4">Technologies Used</h5>
            <ul class="project-tech">
                <li>Java 17</li>
                <li>JavaFX 17</li>
                <li>FXML</li>
                <li>CSS</li>
                <li>Maven</li>
            </ul>

        </div>

        <!-- IMAGE SLIDER -->
        <div id="quickQuizCarousel" class="carousel slide mt-5">
            <div class="carousel-inner">

                <div class="carousel-item active">
                    <img src="/images/projects/QuickQuiz/img1.png" class="d-block w-100">
                </div>

                <div class="carousel-item">
                    <img src="/images/projects/QuickQuiz/2.png" class="d-block w-100">
                </div>

                <div class="carousel-item">
                    <img src="/images/projects/QuickQuiz/3.png" class="d-block w-100">
                </div>

            </div>

            <button class="carousel-control-prev" type="button"
                    data-bs-target="#quickQuizCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>

            <button class="carousel-control-next" type="button"
                    data-bs-target="#quickQuizCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>

    </div>
</section>
