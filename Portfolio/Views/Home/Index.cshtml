<!--  CONTACT  -->
<section class="py-5 animate" id="contact">
    <div class="container">
        <div class="row g-4 align-items-stretch">

            <!-- LEFT side -->
            <div class="col-md-8">
                <div class="contact-box">
                    <h2 class="contact-title">Let's work together</h2>
                    <form asp-controller="Contact" asp-action="Send" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <input name="FirstName" class="form-control" placeholder="First name" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <input name="LastName" class="form-control" placeholder="Last name" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <input name="Email" type="email" class="form-control" placeholder="Email address" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <input name="Phone" class="form-control" placeholder="Phone number">
                            </div>
                        </div>
                        <div class="mb-3">
                            <select name="Service" class="form-control">
                                <option>Select a service</option>
                                <option>Web Development</option>
                                <option>Mobile App</option>
                                <option>Backend API</option>
                            </select>
                        </div>
                        <div class="mb-4">
                            <textarea name="Message" rows="5" class="form-control"
                                      placeholder="Type your message here..." required></textarea>
                        </div>
                        <button class="btn btn-primary px-4">Send message</button>
                    </form>
                </div>
            </div>

            <!-- RIGHT INFO -->
            <div class="col-md-4">
                <div class="contact-info">
                    <div class="info-card">
                        <i class="fas fa-phone"></i>
                        <p>+94 76 084 9549</p>
                    </div>

                    <div class="info-card">
                        <i class="fas fa-envelope"></i>
                        <p>nisalkawshalya555@gmail.com</p>
                    </div>

                    <div class="info-card">
                        <i class="fas fa-map-marker-alt"></i>
                        <p>Balangoda, Sri Lanka</p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

