<!-- About Section -->
<section class="py-5 bg-white" id="about" data-aos="fade-up">
    <div class="container">
        <h2 class="mb-4">About Me</h2>
        <p>
            I am a passionate Full-Stack Developer building web applications using ASP.NET Core, C#,
            and modern frontend technologies. I love creating clean, responsive, and interactive
            web experiences.
        </p>
    </div>
</section>

<!-- Projects Section -->
<section class="py-5 bg-light" id="projects">
    <div class="container">
        <h2 class="mb-5 text-center" data-aos="fade-up">My Projects</h2>
        <div class="row g-4">
            <!-- Project Card 1 -->
            <div class="col-md-4" data-aos="zoom-in">
                <div class="card shadow rounded">
                    <img src="~/images/project1.png" class="card-img-top" alt="Project 1">
                    <div class="card-body">
                        <h5 class="card-title">EMS System</h5>
                        <p class="card-text">ASP.NET Core MVC | SQL Server | C#</p>
                    </div>
                </div>
            </div>

            <!-- Project Card 2 -->
            <div class="col-md-4" data-aos="zoom-in" data-aos-delay="100">
                <div class="card shadow rounded">
                    <img src="~/images/project2.png" class="card-img-top" alt="Project 2">
                    <div class="card-body">
                        <h5 class="card-title">ServeLanka App</h5>
                        <p class="card-text">React Native | Node.js | Firebase</p>
                    </div>
                </div>
            </div>

            <!-- Project Card 3 -->
            <div class="col-md-4" data-aos="zoom-in" data-aos-delay="200">
                <div class="card shadow rounded">
                    <img src="~/images/project3.png" class="card-img-top" alt="Project 3">
                    <div class="card-body">
                        <h5 class="card-title">Portfolio Website</h5>
                        <p class="card-text">ASP.NET Core MVC | Bootstrap | Tailwind</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section class="py-5 bg-white" id="contact" data-aos="fade-up">
    <div class="container">
        <h2 class="mb-4">Contact Me</h2>
        <p>
            If you want to work together or just say hi, send me an email at:
            <a href="mailto:nisal@example.com">nisal@example.com</a>
        </p>
    </div>
</section>

<!-- Scripts for AOS -->
@section Scripts {
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 1000,
            once: true
        });
    </script>
}
