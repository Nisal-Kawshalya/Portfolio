@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section  1-->
<section class="vh-100 d-flex align-items-center text-center bg-light">
    <div class="container" data-aos="fade-up">
        <h1 class="display-4 fw-bold">Hi, I'm Nisal</h1>
        <p class="lead">Full-Stack Developer | .NET | C# | React</p>
        <a href="#projects" class="btn btn-primary mt-3">View Projects</a>
    </div>
</section>

